[MASTER]
# Ignore migration files (auto-generated by Django)
ignore=migrations

[MESSAGES CONTROL]
# Disable false positives for Django ORM (objects manager is added dynamically)
# Migration file naming follows Django conventions (0001_initial.py format)
# Allow broad exception catching (necessary for API error handling - various API exceptions)
# Allow import outside toplevel (sometimes necessary for tests to avoid circular imports)
# Note: Many complexity warnings are handled with inline disable comments where justified
disable=no-member,invalid-name

[FORMAT]
max-line-length=100

[DESIGN]
max-args=10
max-locals=20
max-returns=8
max-branches=20
max-statements=60
max-parents=10
max-attributes=15
min-public-methods=0

